<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Controller.App"
             RequestedThemeVariant="Dark">

    <Application.Styles>
        <FluentTheme />

        <Style Selector="Window">
            <Setter Property="Background" Value="#1a1a2e" />
        </Style>

        <!-- Card style for grouped content -->
        <Style Selector="Border.card">
            <Setter Property="Background" Value="#16213e" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="16" />
            <Setter Property="Margin" Value="0,0,0,16" />
        </Style>

        <!-- Header labels -->
        <Style Selector="TextBlock.header">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#e94560" />
            <Setter Property="Margin" Value="0,0,0,12" />
        </Style>

        <!-- Regular labels -->
        <Style Selector="TextBlock.label">
            <Setter Property="Foreground" Value="#eaeaea" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="13" />
        </Style>

        <!-- Top-positioned labels -->
        <Style Selector="TextBlock.toplabel">
            <Setter Property="Foreground" Value="#b0b0b0" />
            <Setter Property="FontSize" Value="12" />
        </Style>

        <!-- Value display labels -->
        <Style Selector="TextBlock.value">
            <Setter Property="Foreground" Value="#00d9ff" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Width" Value="45" />
            <Setter Property="TextAlignment" Value="Right" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <!-- Input fields -->
        <Style Selector="TextBox">
            <Setter Property="Background" Value="#0f3460" />
            <Setter Property="Foreground" Value="#ffffff" />
            <Setter Property="BorderBrush" Value="#0f3460" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="8,6" />
        </Style>

        <Style Selector="TextBox:focus">
            <Setter Property="BorderBrush" Value="#e94560" />
        </Style>

        <Style Selector="TextBox:disabled">
            <Setter Property="Opacity" Value="0.5" />
        </Style>

        <!-- NumericUpDown -->
        <Style Selector="NumericUpDown">
            <Setter Property="Background" Value="#0f3460" />
            <Setter Property="Foreground" Value="#ffffff" />
            <Setter Property="BorderBrush" Value="#0f3460" />
            <Setter Property="CornerRadius" Value="4" />
        </Style>

        <!-- ComboBox -->
        <Style Selector="ComboBox">
            <Setter Property="Background" Value="#0f3460" />
            <Setter Property="Foreground" Value="#ffffff" />
            <Setter Property="BorderBrush" Value="#0f3460" />
            <Setter Property="CornerRadius" Value="4" />
        </Style>

        <!-- Slider -->
        <Style Selector="Slider">
            <Setter Property="Foreground" Value="#e94560" />
        </Style>

        <!-- CheckBox -->
        <Style Selector="CheckBox">
            <Setter Property="Foreground" Value="#eaeaea" />
        </Style>

        <!-- Primary button -->
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="#e94560" />
            <Setter Property="Foreground" Value="#ffffff" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Padding" Value="24,12" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>

        <Style Selector="Button.primary:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#ff6b6b" />
        </Style>

        <!-- Secondary button -->
        <Style Selector="Button.secondary">
            <Setter Property="Background" Value="#16213e" />
            <Setter Property="Foreground" Value="#eaeaea" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>

        <Style Selector="Button.secondary:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#0f3460" />
        </Style>

        <!-- Preset buttons -->
        <Style Selector="Button.preset">
            <Setter Property="Background" Value="#0f3460" />
            <Setter Property="Foreground" Value="#ffffff" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="14,10" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="MinWidth" Value="100" />
        </Style>

        <Style Selector="Button.preset:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#e94560" />
        </Style>

        <!-- Status text -->
        <Style Selector="TextBlock.status">
            <Setter Property="Foreground" Value="#00d9ff" />
            <Setter Property="FontSize" Value="12" />
        </Style>

    </Application.Styles>
</Application>